@model List<Funcionario>

<h2>Lista de Funcionários</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Cadastrar</a>

</p>

<table class="table">
    <thead>
        <tr>
            <th>FuncionarioId</th>
            <th>Nome Funcionário</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var funcionario in Model)
        {
            <tr>
                <td>@funcionario.FuncionarioId</td>
                <td>@funcionario.NomeFuncionario</td>

                <td>
                    <a asp-action="Edit" asp-route-id="@funcionario.FuncionarioId" class="btn btn-primary">Editar</a> |
                    <a asp-action="Detalhes" asp-route-id="@funcionario.FuncionarioId" class="btn btn-secondary">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@funcionario.FuncionarioId" class="btn btn-danger">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>