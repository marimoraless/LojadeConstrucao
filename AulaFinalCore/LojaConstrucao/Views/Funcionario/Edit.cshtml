@model Funcionario

<h2>Editar Funcionário</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="FuncionarioId" />
    <div class="form-group">
        <label asp-for="NomeFuncionario" class="control-label"></label>
        <input asp-for="NomeFuncionario" class="form-control" />
        <span asp-validation-for="NomeFuncionario" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>


